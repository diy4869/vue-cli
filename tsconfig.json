{
    "include": [
      "src/**/*",
    ],
    "compilerOptions": {
      "strict": true,
      "baseUrl": ".",
      "module": "esnext",
      "target": "es5",
      "lib": ["dom", "esnext"],
      "strictNullChecks": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
    }
  }
  